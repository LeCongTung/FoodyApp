<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodyapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodyApp">
        <activity
            android:name=".show.Show_ListType"
            android:exported="true" />
        <activity
            android:name=".Layout_Cart"
            android:exported="true" />
        <activity
            android:name=".Layout_History"
            android:exported="true" />
        <activity
            android:name=".Layout_Home"
            android:exported="true"
            android:theme="@style/MainScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Layout_Profile"
            android:exported="true"
            android:theme="@style/MainScreen" />
        <activity
            android:name=".activities.Activity_AddProduct"
            android:exported="true"
            android:label="Thêm sản phẩm mới"
            android:parentActivityName=".show.Show_AddProduct" />
        <activity
            android:name=".show.Show_AddProduct"
            android:exported="true"
            android:label="Sản phẩm có sẵn"
            android:parentActivityName=".Layout_Profile" />
    </application>

</manifest>