<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Activity_Login">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="250dp"

        android:background="@drawable/btn_bottomcircle"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"

        android:background="@drawable/btn_topcircle"/>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"

        android:padding="30dp"

        android:background="@drawable/btn_circle_gray"

        android:layout_marginHorizontal="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="ĐĂNG NHẬP"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:textColor="@color/mainColor"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Đăng nhập"
            android:textColor="@color/mainColor"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/btn_circle_gray"

            android:layout_marginVertical="10dp"
            android:padding="10dp"

            android:hint="Tài khoản"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Mật khẩu"
            android:textColor="@color/mainColor"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/passw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/btn_circle_gray"

            android:layout_marginVertical="5dp"
            android:padding="10dp"

            android:hint="Mật khẩu"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/btnforgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Quên mật khẩu?"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/btnregister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:text="Tạo tài khoản"
                android:textColor="@color/black"/>
        </RelativeLayout>

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="50dp"

            android:background="@drawable/btn_circle_orange"

            android:text="Đăng nhập"
            android:textColor="@color/white"/>

        //Other ways to login
        <Button
            android:id="@+id/btnloginbyfb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginVertical="5dp"
            android:padding="10dp"

            android:background="@drawable/btn_login_fb"
            android:drawableStart="@drawable/loginfb"

            android:text="Đăng nhập bằng Facebook"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btnloginbysdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginVertical="5dp"
            android:padding="10dp"

            android:background="@drawable/btn_login_sdt"
            android:drawableStart="@drawable/loginsdt"

            android:text="Đăng nhập bằng số điện thoại"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btnloginbygg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginVertical="5dp"
            android:padding="10dp"

            android:background="@drawable/btn_login_gg"
            android:drawableStart="@drawable/logingg"

            android:text="Đăng nhập bằng Google"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
    </LinearLayout>

</RelativeLayout>