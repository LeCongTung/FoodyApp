<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Private_information"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainColor"
        android:orientation="horizontal"
        android:padding="15dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/outimage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="60dp"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xin chào"
                android:textSize="30dp"
                android:fontFamily="@font/product_sans_regular"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đưa Username vô"
                android:textSize="30dp"
                android:fontFamily="@font/product_sans_regular"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quay lại"
        android:textColor="@color/black"
        android:fontFamily="@font/product_sans_bold"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
        android:drawablePadding="5dp"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên người dùng"
            android:textColor="@color/mainColor"
            android:textSize="18sp"
            android:fontFamily="@font/product_sans_bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/btn_circle_gray"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:text="Tên người dùng"
            android:enabled="false"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại người dùng"
            android:textColor="@color/mainColor"
            android:textSize="18sp"
            android:fontFamily="@font/product_sans_bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/btn_circle_gray"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:text="số điện thoại người dùng"
            android:enabled="false"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tài khoản người dùng"
            android:textColor="@color/mainColor"
            android:textSize="18sp"
            android:fontFamily="@font/product_sans_bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/btn_circle_gray"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:text="Tài khoản người dùng"
            android:enabled="false"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật khẩu người dùng"
            android:textColor="@color/mainColor"
            android:textSize="18sp"
            android:fontFamily="@font/product_sans_bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/mainColor">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/btn_circle_gray"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:text="Mật khẩu người dùng"
                android:enabled="false"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ người dùng"
            android:textColor="@color/mainColor"
            android:textSize="18sp"
            android:fontFamily="@font/product_sans_bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/btn_circle_gray"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:text="Địa chỉ người dùng"
            android:enabled="false"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btnFix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:background="@drawable/btn_circle_orange"
            android:text="Chỉnh sửa"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>