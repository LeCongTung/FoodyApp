<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:paddingHorizontal="20dp"
    android:layout_marginTop="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ava"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"

            android:layout_marginTop="10dp"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ava"
            android:layout_marginTop="30dp"

            android:text="#name"
            android:textAlignment="center"
            android:textColor="@color/mainColor"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"

            android:layout_marginTop="30dp">


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/t1"

            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/title_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:layout_marginStart="55dp"

                android:drawableStart="@drawable/ic_phone"


                android:textSize="25sp" />

            <TextView
                android:id="@+id/phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"

                android:layout_toRightOf="@id/title_phonenumber"

                android:text="#name"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/t3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/t2"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/title_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="55dp"

                android:drawableStart="@drawable/ic_person"

                android:textSize="25sp" />

            <TextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"

                android:layout_toRightOf="@id/title_user"

                android:text="#name"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/t5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/t3"

            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/title_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:layout_marginStart="55dp"

                android:drawableStart="@drawable/ic_home"

                android:textSize="18sp" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"

                android:layout_toRightOf="@id/title_location"

                android:maxWidth="200dp"
                android:text="#name"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/btnedit"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/t5"
            android:layout_alignParentRight="true"

            android:layout_marginTop="120dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_outlinecircle"

            android:padding="20dp"

            android:src="@drawable/ic_changeinformation" />

    </RelativeLayout>

</RelativeLayout>