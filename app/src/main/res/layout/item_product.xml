<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentItem"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    android:background="@drawable/bg_white_itemlist">

    <ImageView
        android:id="@+id/imageProduct"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:src="@drawable/addimage" />

    <RelativeLayout
        android:id="@+id/informationItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"

        android:layout_toRightOf="@id/imageProduct">

        <TextView
            android:id="@+id/nameProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"

            android:text="Name:"
            android:textColor="@color/mainColor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/priceProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameProduct"

            android:layout_marginTop="5dp"

            android:text="Price"
            android:textColor="@color/mainColor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/locationProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/priceProduct"

            android:layout_marginTop="5dp"

            android:text="Address"
            android:textColor="@color/mainColor"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/EventBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/informationItem"
        android:orientation="vertical"
        android:weightSum="2">

        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:src="@drawable/ic_edit"/>
        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:src="@drawable/ic_delete"/>

    </LinearLayout>
</RelativeLayout>